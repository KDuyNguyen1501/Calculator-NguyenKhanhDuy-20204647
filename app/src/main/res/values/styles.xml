<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="numberButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/onclick_number_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">2dp</item>
    <item name="android:onClick">numberClickAction</item>
    </style>
    <style name="operatorButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/onclick_operator_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:onClick">operatorClickAction</item>
    </style>
</resources>